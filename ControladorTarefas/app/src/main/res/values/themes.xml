<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ControladorTarefas" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:windowBackground">@color/colorSurface</item>
        <item name="materialButtonStyle">@style/Widget.ControladorTarefas.Button</item>
        <item name="textInputStyle">@style/Widget.ControladorTarefas.TextInput</item>
    </style>

    <style name="Theme.ControladorTarefas" parent="Base.Theme.ControladorTarefas" />

    <style name="Widget.ControladorTarefas.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.ControladorTarefas.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextAppearance.ControladorTarefas.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.ControladorTarefas.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
</resources>